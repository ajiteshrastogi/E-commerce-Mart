<link rel="stylesheet" href="/navbar.css" /> <!-- Link to navbar.css -->

<nav class="navbar">
    <div class="navbar-brand">🛍️ Mart</div>
    <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <% if (isLoggedIn) { %>
            <% if(user && user.userType === 'guest') { %>
                <li><a href="/favourites">Favourites</a></li> 
                <li><a href="/cart">Cart</a></li>
            <% } else if(user && user.userType === 'host') { %>
                <li><a href="/favourites">Favourites</a></li> 
                <li><a href="/cart">Cart</a></li>
                <li><a href="/host/hostHome">Host Dashboard</a></li>
                <li><a href="/host/add-product">Add Product</a></li>
            <% } %>
            <li>
                <form action="/logout" method="POST">   
                    <button type="submit">Logout</button>
                </form>
            </li>
        <% } else { %>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
        <% } %>
    </ul>
</nav>
